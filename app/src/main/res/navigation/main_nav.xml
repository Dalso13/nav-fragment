<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.jdw.nav_fragment.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment22"
            app:destination="@id/secondFragment2" />
        <action
            android:id="@+id/action_firstFragment_to_thirdFragment22"
            app:destination="@id/thirdFragment2" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment2"
        android:name="com.jdw.nav_fragment.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/action_sencondFragment_to_firstFragment22"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_sencondFragment_to_thirdFragment22"
            app:destination="@id/thirdFragment2" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment2"
        android:name="com.jdw.nav_fragment.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third">
        <action
            android:id="@+id/action_thirdFragment_to_firstFragment22"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_thirdFragment_to_sencondFragment22"
            app:destination="@id/secondFragment2" />
    </fragment>
</navigation>